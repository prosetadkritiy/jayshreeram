    <script>
        let remainingSeconds = 60;
        function updateCountdown() {
            document.getElementById("countdown").innerHTML = `${remainingSeconds}`;
            remainingSeconds -= 1;
            if (remainingSeconds < 0) {
                remainingSeconds = 60;
            }
        }
        updateCountdown();
        const countdownInterval = setInterval(updateCountdown, 1000);
